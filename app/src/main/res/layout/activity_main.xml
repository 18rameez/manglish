<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="389dp"
            android:layout_height="205dp"
            android:inputType="textLongMessage|text"
            android:text="Paste malayalam text here"
            android:ems="10"
            tools:layout_editor_absoluteY="16dp" android:id="@+id/inputText"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:text="TextView"
            android:layout_width="386dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="242dp"
            android:id="@+id/outputText" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.44"/>
</android.support.constraint.ConstraintLayout>
